@page "{id:int}"
@model WebApplication1.Pages.EditCarModel
@{
    ViewData["Title"] = "Edit Car";
}

<h1>Edit Car</h1>

<form method="post">
    <input type="hidden" asp-for="Car.CarID" />
    <div>
        <label for="brand">Brand:</label>
        <input type="text" id="brand" asp-for="Car.Brand" />
    </div>
    <div>
        <label for="model">Model:</label>
        <input type="text" id="model" asp-for="Car.Model" />
    </div>
    <div>
        <label for="year">Year:</label>
        <input type="number" id="year" asp-for="Car.Year" />
    </div>
    <div>
        <label for="passengerCapacity">Passenger Capacity:</label>
        <input type="number" id="passengerCapacity" asp-for="Car.PassengerCapacity" />
    </div>
    <div>
        <label for="description">Description:</label>
        <textarea id="description" asp-for="Car.Description"></textarea>
    </div>
    <div>
        <label for="pricePerDay">Price Per Day:</label>
        <input type="number" step="0.01" id="pricePerDay" asp-for="Car.PricePerDay" />
    </div>
    <button type="submit">Save Changes</button>
</form>
